<!DOCTYPE html>
<html lang="ja" ng-app="OptimalPaper">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>KININARU &mdash; 論文検索</title>
    <title>Optimal Paper</title>

    <link href="/stylesheets/layout.css" rel="stylesheet">

    <link href="/stylesheets/review_template.css" rel="stylesheet">
    <link href="/stylesheets/paper_template.css" rel="stylesheet">
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" rel="stylesheet">
    <!-- Bootstrap -->
    <link href="/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular.min.js"></script>
    <script src="/modules/OptimalPaper.js"></script>

    <!--template-->
    <link rel="shortcut icon" href="favicon.ico">

    <link href='https://fonts.googleapis.com/css?family=Roboto:400,100,300,600,400italic,700' rel='stylesheet' type='text/css'>


    <!-- Modernizr JS -->
    <script src="../src/js/modernizr-2.6.2.min.js"></script>

    <% content 'css' %>

  </head>
  <body ng-controller="OPController">
    <!-- ヘッダー部分 -->
    <div id="headerbg">
      <div id="header">
        <!-- ロゴ画像 -->
        <div id="logo">
          <a href="/"><img src="/images/LogoFactory.jpg"></a>
        </div>

        <!-- ログインボタン -->
        <div id="login_button">
          <% if @user : %>
          <div id="username"><%= @user.name %></div>
          <img id="icon" src="<%= @user.icon_url %>">
          <% else : %>
          <a href="/auth/twitter" class="btn btn-primary" role="button">login<img id="twitter" src="/images/twitter.png"></a>
          <% end %>
        </div>
      </div>
    </div>

    <!-- body部分 -->
    <div id="Main">
      <% content %>
    </div>

    <footer id="fh5co-footer" role="contentinfo">
      <div class="container">
        <div class="row row-bottom-padded-sm">
          <div class="col-md-12">
            <p class="copyright text-center">&copy; 2016 <a href="/">KININARU</a>. All Rights Reserved.</p>
          </div>
        </div>
      </div>
    </footer>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <!-- jQuery Easing -->
    <script src="../src/js/jquery.easing.1.3.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- Waypoints -->
    <script src="../src/js/jquery.waypoints.min.js"></script>
    <!-- Flexslider -->
    <script src="../src/js/jquery.flexslider-min.js"></script>
    <!-- Magnific Popup -->
    <script src="../src/js/jquery.magnific-popup.min.js"></script>
    <script src="../src/js/magnific-popup-options.js"></script>
    <script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
  </body>
</html>
